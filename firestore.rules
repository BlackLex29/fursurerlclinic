rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Medical records - admin can create for any user, users can only read their own
    match /medicalRecords/{document} {
      allow write: if request.auth.token.email in ['admin@rlclinic.com', 'veterinarian@rlclinic.com', 'staff@rlclinic.com', 'youradminemail@gmail.com'];
      allow read: if request.auth != null && 
        (resource.data.ownerEmail == request.auth.token.email || 
         request.auth.token.email in ['admin@rlclinic.com', 'veterinarian@rlclinic.com', 'staff@rlclinic.com', 'youradminemail@gmail.com']);
    }
    
    // Pet profiles - users can manage their own, admins can read all
    match /petProfiles/{document} {
      allow read, write: if request.auth != null && 
        (resource.data.ownerEmail == request.auth.token.email ||
         request.auth.token.email in ['admin@rlclinic.com', 'veterinarian@rlclinic.com', 'staff@rlclinic.com', 'youradminemail@gmail.com']);
    }
  }
}